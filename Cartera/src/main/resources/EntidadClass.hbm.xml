<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.Cartera.EntidadClass" table="entidad" schema="mycarteradb">
        <id name="identidad">
            <column name="identidad" sql-type="int(10)"/>
        </id>
        <property name="idcartera">
            <column name="idcartera" sql-type="int(10)"/>
        </property>
        <property name="transaccion">
            <column name="transaccion" sql-type="varchar(200)" length="200"/>
        </property>
    </class>
</hibernate-mapping>